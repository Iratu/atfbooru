<% TagCategory.css_mapping.each do |category,cssmap| %>
  .tag-type-<%= category %> a,
  a.tag-type-<%= category %>,
  .ui-widget-content .tag-type-<%= category %> a,
  .ui-widget-content a.tag-type-<%= category %> {
    color: <%= cssmap["color"] %>;

    &:link, &:visited {
      color: <%= cssmap["color"] %>;
    }

    &:hover {
      color: <%= cssmap["hover"] %>;
    }

    &.selected {
      color: var(--selected-tag-color);
    }
  }

  .ui-widget-content .ui-state-active a.tag-type-<%= category %> {
    color: <%= cssmap["hover"] %>;

    &:link, &:visited {
      color: <%= cssmap["color"] %>;
    }

    &:hover {
      color: <%= cssmap["hover"] %>;
    }

    &.selected {
      color: var(--selected-tag-color);
    }
  }
<% end %>

a.search-tag {
  word-break: break-word;
}

.inline-tag-list {
  ul {
    display: inline;

    li {
      display: inline;
      margin-right: 0.5em;
    }
  }
}
